extends layout

block header
	div.head-container.col-sm-offset-1
		h1 Stick Figure Showdown
		ul.nav.nav-tabs
			li: a(href="/") Submit Entry
			li.active: a(href="/submissions") Submissions
			li: a(href="/vote") Vote
block content
	div.col-sm-offset-1
		if info.length > 4
			p.contest-full.bg-danger: strong Contest is full
		h3 Submissions
		div.entries
			ul
				each val in info
					p.text-info Title: #{val.title}
					iframe(width="560" height="315" src="//www.youtube.com/embed/" + val.url + "?list=PL5586336C26BDB324", frameborder="0" allowfullscreen)
					p.text-muted By: #{val.name}
					p.text-muted.descrip ~ #{val.description}
